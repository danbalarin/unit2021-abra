{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2019",
		"noImplicitAny": true,
		"moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
		"sourceMap": true,
		"outDir": "build",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		}
	},
	"include": [
    "src/**/*.ts"
  ]
}